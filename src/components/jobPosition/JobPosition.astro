---
import { Icon } from 'astro-icon/components';

interface Props {
  image: string;
  name: string;
  description: string;
  link: string;
  from: string;
  to: string;
  role: string;
  highlight?: boolean;
  linkedin?: string;
  twitter?: string;
}

const {
  image,
  name,
  description,
  from,
  to,
  role,
  link,
  highlight = false,
  linkedin,
  twitter,
} = Astro.props;
---

<div
  class={`group relative overflow-hidden rounded-xl border transition-all duration-200 hover:shadow-lg
    ${
      highlight
        ? "bg-white dark:bg-gray-900 border-purple-100 dark:border-purple-900/50 shadow-md shadow-purple-500/5"
        : "bg-white dark:bg-gray-900 border-gray-100 dark:border-gray-800"
    }
  `}
>
  {highlight && (
    <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 rounded-full bg-linear-to-br from-purple-500 to-pink-500 blur-2xl opacity-15 dark:opacity-30"></div>
  )}

  <div class="flex flex-col sm:flex-row gap-5 p-5 sm:p-6 relative z-10">
    <div class="shrink-0">
      <div class="w-16 h-16 sm:w-18 sm:h-18 rounded-xl bg-gray-50 dark:bg-gray-800 border border-gray-100 dark:border-gray-700 flex items-center justify-center overflow-hidden p-3">
        <img
          src={image}
          alt={name}
          class="max-w-full max-h-full object-contain"
        />
      </div>
    </div>

    <div class="flex flex-col flex-1 gap-1.5">
      <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-2">
        <div class="space-y-0.5">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">
            {name}
          </h3>
          <p class="text-base font-medium text-purple-600 dark:text-purple-400">
            {role}
          </p>
        </div>
        <span class="inline-flex px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 whitespace-nowrap self-start">
          {from} - {to}
        </span>
      </div>

      <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl mt-1">
        {description}
      </p>

      {(linkedin || twitter || link) && (
        <div class="flex gap-3 items-center mt-3">
          {link && (
            <a
              href={link}
              target="_blank"
              rel="noreferrer"
              class="text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors"
              aria-label="Website"
            >
              <Icon name="lucide:globe" class="w-4.5 h-4.5" />
            </a>
          )}
          {linkedin && (
            <a
              href={linkedin}
              target="_blank"
              rel="noreferrer"
              class="text-gray-400 hover:text-[#0077b5] transition-colors"
              aria-label="LinkedIn"
            >
              <Icon name="simple-icons:linkedin" class="w-4.5 h-4.5" />
            </a>
          )}
          {twitter && (
            <a
              href={twitter}
              target="_blank"
              rel="noreferrer"
              class="text-gray-400 hover:text-black dark:hover:text-white transition-colors"
              aria-label="Twitter"
            >
               <Icon name="simple-icons:x" class="w-4.5 h-4.5" />
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</div>
