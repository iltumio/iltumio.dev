---
import JobPosition from "../jobPosition/JobPosition.astro";
---

<div class="flex flex-col w-full">
  <div class="flex items-center gap-6 mb-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white shrink-0">
      What I do
    </h2>
    <div class="h-px flex-1 bg-gray-200 dark:bg-gray-800"></div>
  </div>
  <div class="w-full">
    <JobPosition
      name="Zyphe Inc."
      role="Co-founder & Chief Technology Officer"
      description="Redefining digital identity with seamless, innovative solutions for everyone."
      image="/zyphe-logotype.svg"
      link="https://zyphe.com"
      linkedin="https://www.linkedin.com/company/zyphe"
      twitter="https://x.com/zyphe_official"
      from="Dec. 2024"
      to="Present"
      highlight
    />
  </div>
</div>
